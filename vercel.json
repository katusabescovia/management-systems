{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",     
      "dest": "/backend/server.js"
    },
    {
      "src": "/index.html",    
      "dest": "/Frontend/index.html"
    },
    {
      "src": "/landing",       
      "dest": "/Frontend/landing.html"
    },
    {
      "src": "/static/(.*)",   
      "dest": "/Frontend/$1"
    },
    {
      "src": "/(.*)",          
      "dest": "/Frontend/index.html"
    }
  ]
}
